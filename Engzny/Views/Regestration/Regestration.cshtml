
@model RegestrationVM
@{
    ViewData["Title"] = "Regestration";
}

<!-- Sign Up Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-10 col-md-7 col-lg-7 col-xl-6">
            <div class="bg-dark rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a asp-action="Index" asp-controller="Home" class="">
                        <h3 class="text-primary"><i class="fas fa-tools me-2"></i>Engzny</h3>
                    </a>
                    <h3 class="text-white">Register</h3>
                </div>
                <div asp-validation-summary="All" class="form-floating mb-3">

                </div>
                <form asp-action="Regestration" asp-controller="Regestration" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" type="text" class="form-control" id="floatingText" placeholder="jhondoe">
                        <label for="floatingText">Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-floating mb-4">
                        <select class="form-control" asp-for="Role" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))">
                            <option></option>
                        </select>
                        <label for="floatingSelect">SelectRole</label>

                        <span asp-validation-for="Role" class="text-danger"></span>

                    </div>

                   

                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->
<script src="~/jquery/dist/jquery.js"></script>
<script src="~/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


