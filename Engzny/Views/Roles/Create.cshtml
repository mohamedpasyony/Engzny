
@model RolesVM
@{
    ViewData["Title"] = "Create Role";
}

<!-- Sign Up Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-10 col-md-7 col-lg-7 col-xl-6">
            <div class="bg-dark rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="index.html" class="">
                        <h3 class="text-primary"><i class="fas fa-tools me-2"></i>Engzny</h3>
                    </a>
                    <h3 class="text-white">Create Role</h3>
                </div>
                <div asp-validation-summary="All" class="form-floating mb-3">

                </div>
                <form asp-action="Create" asp-controller="Roles" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="Name" type="text" class="form-control" id="floatingText" placeholder="jhondoe">
                        <label for="floatingText">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>

                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Create</button>
                    <a class="btn btn-outline-danger mb-3" asp-action="Index" asp-controller="Roles">Back</a>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->
<script src="~/jquery/dist/jquery.js"></script>
<script src="~/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


