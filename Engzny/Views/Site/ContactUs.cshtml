@model ContactVM
@{
    ViewBag.Title = "تواصل معنا";
    Layout = "~/Views/Layout/_SiteLayout1.cshtml";
}

<div class="page-hdr">
    <div class="container">
        <h1>
            تواصل معنا
        </h1>
    </div>
</div>

<!-- Start Form -->
<div class="contact  mt-3 mb-5" style="direction: rtl;">
    <div class="container">

        <div class="main-title text-center mb-5 position-relative">
            <h2 style="font-weight: bold;">نسعد بتواصلكم معنا.</h2>
            <p class="text-black-50">Stay tuned to our new services</p>
        </div>

        <div class="row">
            <div class="col-lg-7">
                <form method="post" asp-action="ContactUs" asp-controller="Site">
                    <div class="form-group mb-4">
                        <label for="name">الاسم:</label>
                        <input asp-for="Name" class="form-control" type="text"
                               placeholder="قم بإدخال اسمك هنا">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label for="email"> البريد الإلكترونى:</label>
                        <input asp-for="Email" class="form-control" type="text"
                               placeholder="قم بإدخال الايميل هنا">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group mb-4">
                        <label for="number">الهاتف:</label>
                        <input asp-for="Phone" class="form-control" type="text"
                               placeholder="قم بإدخال رقم هاتفك هنا">
                        <span asp-validation-for="Phone" class="text-danger"></span>

                    </div>
                    <div class="form-group mb-4">
                        <label for="message">رسالتك:</label>
                        <textarea asp-for="Message" class="form-control" rows="5"
                                  placeholder="اكتب رسالتك هنا"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>

                    </div>
                    <div class="form-group mb-4">
                        <button class="col-4" type="submit" value="submit" onclick="openPopup()">إرسال</button>
                    </div>


                </form>
            </div>

            <div class="col-lg-5">
                <div class="sub-cont">
                    <h3 class="mb-3">للتواصل معنا:</h3>
                    <p>Call Center: 010101010 | 171101190101</p>
                    <p>
                        Email : <a class="" href="mailto:EngznyCom@gmail.com">
                            EngznyCom@gmail.com
                        </a>
                    </p>
                    <p>للإنضمام لقسم الفنيين ارسل رسالة واتس اب على : 11111111111 | 00000000000</p>
                    <ul class="d-flex list-unstyled gap-4">
                        <li>
                            <a class="d-block text-light" href="#">
                                <i class="fa-brands fa-youtube fa-lg youtube rounded-circle p-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="d-block text-light" href="#">
                                <i class="fa-brands fa-linkedin fa-lg linkedin rounded-circle p-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="d-block text-light" href="#">
                                <i class="fa-brands fa-twitter fa-lg twitter rounded-circle p-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="d-block text-light" href="#">
                                <i class="fa-brands fa-facebook fa-lg facebook rounded-circle p-2"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/jquery/dist/jquery.js"></script>
<script src="~/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}
<!-- Start PopUp -->
<!-- End PopUp -->
<!-- End Form -->
