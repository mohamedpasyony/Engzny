    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>*@
    <script src="~/siteFolders/js/bootstrap.bundle.min.js"></script>
    <script src="~/siteFolders/js/all.min.js"></script>


    



    <!-- End Importing -->

</body>

</html>