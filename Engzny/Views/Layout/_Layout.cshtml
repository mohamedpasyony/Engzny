                            Designed By Team Engzny
                            </br>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    <script src="~/Plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/Plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.colVis.min.js"></script>
    <script src="~/lib/chart/chart.min.js"></script>
    <script src="~/SiteFolders/js/jquery.timeago.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>

            $(function () {

                // define connecrtion
                con = new signalR.HubConnectionBuilder().withUrl("/notifiactionHub").build();
                // start connection
                con.start();
                notificationCount = 0;
                var url ="@Url.Content("~/Sounds/livechat-129007.mp3")";
                const notificationSound = new Audio(url);




                //subcribe new message method
                con.on("newOrderNotification", function (Name,message,time) {

                    const $myDiv = $('#test1');
                    // Increment the notification count
                    notificationCount++;
                        // Update the count element
                    $(".notification-count").text(notificationCount).show();
                    $("#noNotification").hide();
                    // Play the notification sound
                    notificationSound.play();
                    const $newLink = $('<a href="/Order/Index" class="dropdown-item"><h6 class="fw-normal mb-0">' + message + ' ' + Name + '</h6><time class="timeago" datetime="' + time + '"  <time></a>');
                    $myDiv.prepend($newLink);
                    $("time.timeago").timeago();
                    $myDiv.prepend('<hr class="dropdown-divider">');


                })

                con.on("newContactNotification", function (Name, message, time) {

                    const $myDiv = $('#test1');
                    // Increment the notification count
                    notificationCount++;
                    // Update the count element
                    $(".notification-count").text(notificationCount).show();
                    $("#noNotification").hide();
                     // Play the notification sound
                    notificationSound.play();
                    const $newLink = $('<a href="/Contact/Index" class="dropdown-item"><h6 class="fw-normal mb-0">' + message + ' ' + Name + '</h6><time class="timeagoC" datetime="' + time + '"  <time></a>');
                    $myDiv.prepend($newLink);
                    $("time.timeagoC").timeago();
                    $myDiv.prepend('<hr class="dropdown-divider">');

                })

                con.on("NewContact", function (Name,Email,Phone,Date,id) {

                    const $contact = $('<tr class="text-white parent"><td>' + Name + ' </td> <td>' + Email + ' </td> <td><span>0</span>' + Phone + '</td> <td>' + Date + ' </td> <td><a href="/Contact/Details/'+id+ '"' + 'class="btn btn-success">' + 'Details</a></td>' + '<td><a href="javascript:;" data-id="' + id + '" class="btn btn-danger js-delete">Delete</a></td>' + '</tr >');
                    const $table = $('#Tbody');
                    $table.prepend($contact);



                })


                con.on("newOrder", function (Name, Phone, Date,Service,Id) {

                   const  $htmlCode ='<tr class="text-white parent">' +
                       '<td>' +
                       Id +
                        '</td>' +
                       '<td>' + Name + '</td>' +
                       '<td>' + Service + '</td>' +
                        '<td><span>0</span>' + Phone + '</td> ' +
                        '<td>' + Date + '</td> '
                            +
                           '<td style="color:yellow">Pending</td>'

                            +
                           '<td><a href="/Order/Details/'+Id+'"class="btn btn-success">Details</a></td>'

                       +
                       '<td><a href="/Order/UpdateStatus/'+Id +'" class="btn btn-primary">Change Status</a></td>'
                       +
                       '<td><a href="javascript:;" data-id="'+Id+'" class="btn btn-danger js-delete">Delete</a></td>' +
                      '</tr>';

                    const $table = $('#Otbody');
                    $table.prepend($htmlCode);



                })


            })


            // When the user clicks on the notification icon, reset the count
            $("#OnClick").click(() => {
                notificationCount = 0;
                $(".notification-count").hide();
            });



    </script>

    @await Component.InvokeAsync("NToastNotify")

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>


</body>

</html>
