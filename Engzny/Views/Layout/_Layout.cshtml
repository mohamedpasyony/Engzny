<body>
    <div class="container-xxl position-relative bg-white d-flex  p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fas fa-tools me-2"></i>Engzny</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/img/User.png" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        @if (SignManger.IsSignedIn(User))
                        {
                            <h6 class="mb-0">@User.Identity.Name</h6>
                            <!--

                              var user = await UserManger.FindByNameAsync(User.Identity.Name);
                              var role = await UserManger.GetRolesAsync(user);
                              foreach (var item in role)
                             {
                                <span></span>

                               }

                            -->
                            if (User.IsInRole("Admin"))
                            {
                                <span>Admin</span>
                            }
                            if (User.IsInRole("Manger"))
                            {
                                <span>Manger</span>
                            }
                            if (User.IsInRole("Customer Service"))
                            {
                                <span>Customer Service</span>
                            }


                        }
                    </div>

                </div>
                @if (@User.IsInRole("Admin"))
                {
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active"><i class="fas fa-home me-2"></i>Home</a>
                        <br />
                        <a asp-action="Index" asp-controller="Order" class="nav-item nav-link active"><i class="fas fa-shopping-cart me-2"></i>Orders</a>
                        <br />
                        <a asp-action="Index" asp-controller="Craftman" class="nav-item nav-link active"><i class="fas fa-people-carry me-2"></i>Craftsmen</a>
                        <br />
                        <a asp-action="Index" asp-controller="Service" class="nav-item nav-link active"><i class="fas fa-wrench me-2"></i>Services</a>
                        <br />
                        <a asp-action="Index" asp-controller="Roles" class="nav-item nav-link active"><i class="fas fa-ban me-2"></i>Roles</a>
                        <br />
                        <a asp-action="Index" asp-controller="User" class="nav-item nav-link active"><i class="fas fa-users me-2"></i>Users</a>
                        <br />
                        <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link active"><i class="far fa-address-book me-2"></i>Contacts</a>
                        <br />
                        <a asp-action="Index" asp-controller="Site" class="nav-item nav-link active"><i class="fas fa-walking me-2"></i>Site</a>
                        <br />
                        <a asp-action="Regestration" asp-controller="Regestration" class="nav-item nav-link active"><i class="fas fa-walking me-2"></i>Registration</a>

                    </div>

                }

                @if (@User.IsInRole("Manger"))
                {
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active"><i class="fas fa-home me-2"></i>Home</a>
                        <br />
                        <a asp-action="Index" asp-controller="Order" class="nav-item nav-link active"><i class="fas fa-shopping-cart me-2"></i>Orders</a>
                        <br />
                        <a asp-action="Index" asp-controller="Craftman" class="nav-item nav-link active"><i class="fas fa-people-carry me-2"></i>Craftsmen</a>
                        <br />
                        <a asp-action="Index" asp-controller="Service" class="nav-item nav-link active"><i class="fas fa-wrench me-2"></i>Services</a>
                        <br />

                        <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link active"><i class="far fa-address-book me-2"></i>Contacts</a>
                        <br />
                        <a asp-action="Index" asp-controller="Site" class="nav-item nav-link active"><i class="fas fa-walking me-2"></i>Site</a>
                        <br />

                    </div>

                }

                @if (@User.IsInRole("Customer Service"))
                {
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active"><i class="fas fa-home me-2"></i>Home</a>
                        <br />
                        <a asp-action="Index" asp-controller="Order" class="nav-item nav-link active"><i class="fas fa-shopping-cart me-2"></i>Orders</a>
                        <br />
                        <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link active"><i class="far fa-address-book me-2"></i>Contacts</a>
                        <br />
                        <a asp-action="Index" asp-controller="Site" class="nav-item nav-link active"><i class="fas fa-walking me-2"></i>Site</a>

                    </div>

                }

            </nav>

        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0 ">
                <a href="index.html" class="navbar-brand d-flex d-lg-none ">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>



                <div class="nav-item dropdown">
                    <a id="OnClick" href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <span class="notification-count"></span>
                        <i class="fa fa-bell me-lg-2"></i>
                        <span class="d-none d-lg-inline-flex">Notifications</span>
                    </a>
                    <div id="test1" class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">

                        <hr class="dropdown-divider">
                        <a id="noNotification" class="dropdown-item text-center"> All clear. No new notifications.</a>
                    </div>
                </div>
                <div class="nav-item dropdown" style="margin-left:auto">


                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <img class="rounded-circle me-lg-2" src="~/img/User.png" alt="" style="width: 40px; height: 40px;">
                        @if (SignManger.IsSignedIn(User))
                        {
                            <span class="d-none d-lg-inline-flex">@User.Identity.Name</span>
                        }

                    </a>



                    <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">

                        <a asp-action="LogOut" asp-controller="Account" class="dropdown-item">Log Out</a>
